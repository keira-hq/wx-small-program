/**app.wxss**/
.header{
  height:140rpx;
  width:750rpx;
  margin-left:50rpx;
  /* background-color: blanchedalmond; */
}
.header_img{
  height:140rpx;
  width:100rpx;
  /* background-color: silver; */
  float:left;
}

.assisstant_img{
  height:80rpx;
  width:80rpx;
  padding:40rpx 15rpx 20rpx 5rpx;
}
.header_content{
  /* background-color:yellow; */
  padding-top: 65rpx;
  display: inline-block;
  font-size:1em;
  font-weight: 600;
  color:#2c2c2c;
}

.body{
  width:750rpx;
  /* background-color: skyblue; */
  margin-left:50rpx;
}
.search-box{
  width:650rpx;
  height:120rpx;
  /* background-color: silver; */
}
.input{
  width:650rpx;
  height:100rpx;
  display: inline-block;
  padding-left:78rpx;
  border:1rpx solid #2c2c2c;
  border-radius: 30rpx;
  box-sizing: border-box;
}

.article_area{
  width:650rpx;
}

.article{
  width:650rpx;
  height:250rpx;
  box-sizing: border-box;
  border-radius:30rpx;
  margin-top: 55rpx;
  /* border:1rpx solid black; */
  display: flex;
  box-shadow: 0rpx 4rpx 8rpx #808080;
}

.article_txt{
  /* background-color: violet; */
  margin-top:60rpx;
  margin-left:20rpx;
}

.article_title{
  font-size:1.1em;
  font-weight:400;
  color:#2c2c2c;
  margin-bottom:40rpx;
  
}
.article_date{
  font-size:0.9em;
  font-weight:500;
  color:#808080;
  float: left;
  /* background-color: yellow; */
}

.navigator-hover{
  background-color:white; opacity: 0.4;
  color:black;
}


